#include <iostream>
#include <fstream>
#include <ctime>
#include <sstream>
#include "IRClientTCP.h"

using namespace std;

int main()
{
	IRClientTCP monClient;
	unsigned char trame[512];
	int pan;
	while (1){
		cout << "Saisir un nombre :" << endl;
		cin >> pan;
		trame[0] = pan;

		monClient.SeConnecterAUnServeur("172.20.21.35", 4123);
		monClient.Envoyer(trame,512);
		cout << "Attente ..." << endl;
		cin;
	}
}
